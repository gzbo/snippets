<style>.notice.notice--info, .notice.notice--warning{display: none}, .content-box:has(> .shipment-information){display: none}</style><script>function removeComponents(){var e=document.querySelectorAll("[data-product-id]");for(let n=0;n<e.length;n++){var t=e[n];t.innerText.includes("PART OF BUNDLE")&&t.remove()}}document.addEventListener("DOMContentLoaded",removeComponents),document.querySelector(".order-summary-toggle").addEventListener("click",function(){setTimeout(removeComponents,100)});</script>
